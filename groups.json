{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "properties": {
        "_id": {
            "minLength": 2,
            "maxLength": 32,
            "pattern": "^[0-9a-z_-]*$",
            "title": "ID",
            "type": "string"
        },
        "name": {
            "minLength": 2,
            "maxLength": 32,
            "pattern": "^[0-9A-Za-z _-]*$",
            "title": "Name",
            "type": "string"
        },
        "roles": {
            "default": [],
            "items": {
                "additionalProperties": false,
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "access": {
                        "enum": [
                            "ro",
                            "rw",
                            "admin"
                        ],
                        "type": "string"
                    }
                },
                "required": [
                    "access",
                    "_id"
                ],
                "type": "object"
            },
            "title": "Roles",
            "type": "array",
            "uniqueItems": true
        }
    },
    "required": [
        "_id"
    ],
    "title": "Group",
    "type": "object"
}
